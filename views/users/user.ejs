<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <title>Users Database</title>
</head>
<body>
  <div class="container">
    <h1 class="mt-5">Users + Tweet Databse</h1>
    <div class="row">
      <div class="col-4">
        <h4>Create a new user</h4>
        <form action="/api/users/create", method="POST">
          <%- include('_form_new_user') %>
        </form>
      </div>
      <div class="col-4">
        <h4>Update a new user</h4>
        <form action="/api/users/update", method="POST">
          <%- include('_form_update_user') %>
        </form>
      </div>
      <div class="col-4">
        <h4>Get / Delete a specific user</h4>
        <form action="/api/users/getone", method="POST">
          <%- include('_form_get_specific_user') %>
        </form>
        <form action="/api/users/delete", method="POST">
          <%- include('_form_delete_user') %>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-4">
        <h4>Create a new tweet</h4>
        <form action="/api/posts/create", method="POST">
          <%- include('../posts/_form_new_tweet') %>
        </form>
      </div>
      <div class="col-4">
        <h4>Update a tweet</h4>
        <form action="/api/posts/update", method="POST">
          <%- include('../posts/_form_update_tweet') %>
        </form>
      </div>
      <div class="col-4">
        <h4>Get / Delete a specific tweet</h4>
        <form action="/api/posts/getone", method="POST">
          <%- include('../posts/_form_get_specific_tweet') %>
        </form>
        <form action="/api/posts/delete", method="POST">
          <%- include('../posts/_form_delete_tweet') %>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-4">
        <h4>Join User Friends</h4>
        <form action="/api/users/join", method="POST">
          <%- include('_form_join_user_friends') %>
        </form>
      </div>
      <div class="col-4">
        <h4>UnJoin User Friends</h4>
        <form action="/api/users/unjoin", method="POST">
          <%- include('_form_unjoin_user_friends') %>
        </form>
      </div>
      <div class="col-4">
        <h4>Get User's Friends' Posts</h4>
        <form action="/api/posts/getfriends", method="POST">
          <%- include('../posts/_form_get_friends_tweet') %>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <h2 class="mt-4">Users Data</h2>
        <% users.forEach(user => { %>
          <div class="card mt-4">
            <div class="card-body">
              <h4 class="card-title">name: <%= user.name %></h4>
              <h5 class = "card-text mb-2">user id: <%= user.id %><h5>
              <div class = "card-text mb-2">email: <%= user.email %></div>
              <div class = "card-text mb-2">password: <%= user.password %></div>
              <div class = "card-text mb-2">friends: <% user.firends %></div>
            </div>
          </div>
        <% })%>
      </div>
      <div class="col-6">
        <h2 class="mt-4">Tweets Data</h2>
        <% posts.forEach(post => { %>
          <div class="card mt-4">
            <div class="card-body">
              <h4 class="card-title">tweet name: <%= post.name %></h4>
              <h5 class="card-title">tweet id: <%= post.id %></h5>
              <h5 class = "card-text mb-2">text: <%= post.text %><h5>
                <h5 class = "card-text mb-2">user id: <%= post.user %><h5>
            </div>
          </div>
        <% })%>
      </div>
    </div>
      
  </div>
</body>
</html>